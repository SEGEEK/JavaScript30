{
	"typescript.check.workspaceVersion": false,
	"files.exclude": {
		"**/.git": true,
		"**/.svn": true,
		"**/.hg": true,
		"**/.DS_Store": true,
		"**/*.js": {
			"when": "$(basename).ts"
		}
	},
	"typescript.tsdk": "./node_modules/typescript/lib",
	"editor.formatOnSave": true,
	"editor.tabSize": 2,
	"editor.insertSpaces": false
}